{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM", "WebWorker"],
    "types": ["@cloudflare/workers-types"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "public/**/*.ts"]
}
